@implements IDisposable

@if (_isVisible)
{
    <div class="nsi-toast-wrapper">
        <div class="nsi-toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="nsi-toast__icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="nsi-toast__body">
                @Message
            </div>
            <button type="button" class="nsi-toast__close" @onclick="Hide" aria-label="Затвори">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    </div>
}

@code {
    private bool _isVisible;
    private System.Threading.Timer? _timer;

    [Parameter]
    public string Message { get; set; } = string.Empty;

    public void Show(string message)
    {
        Message = message;
        _isVisible = true;
        StateHasChanged();

        _timer?.Dispose();
        _timer = new System.Threading.Timer(_ =>
        {
            _isVisible = false;
            InvokeAsync(StateHasChanged);
        }, null, 2000, Timeout.Infinite);
    }

    private void Hide()
    {
        _isVisible = false;
        _timer?.Dispose();
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}
