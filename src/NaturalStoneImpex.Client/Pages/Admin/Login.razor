@page "/admin/login"
@layout LoginLayout
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Вход в администрацията — Natural Stone Impex</PageTitle>

<div class="text-center mb-4">
    <p class="text-muted mb-0" style="font-size: 0.95rem;">Вход в администрацията</p>
</div>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="login-error-alert mb-4" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>
        @_errorMessage
    </div>
}

<EditForm Model="_model" OnValidSubmit="HandleLogin" FormName="loginForm">
    <DataAnnotationsValidator />

    <div class="mb-4">
        <label for="username" class="form-label">Потребителско име</label>
        <InputText id="username" class="form-control" @bind-Value="_model.Username" disabled="@_isLoading" />
        <ValidationMessage For="() => _model.Username" />
    </div>

    <div class="mb-4">
        <label for="password" class="form-label">Парола</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="_model.Password" disabled="@_isLoading" />
        <ValidationMessage For="() => _model.Password" />
    </div>

    <button type="submit" class="btn btn-nsi-accent w-100 login-submit-btn" disabled="@_isLoading">
        @if (_isLoading)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="color: var(--nsi-dark);"></span>
            <span>Влизане...</span>
        }
        else
        {
            <span>Вход</span>
        }
    </button>
</EditForm>

@code {
    private readonly LoginFormModel _model = new();
    private string? _errorMessage;
    private bool _isLoading;

    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    protected override void OnInitialized()
    {
        if (AuthService.IsLoggedIn)
        {
            Navigation.NavigateTo(ReturnUrl ?? "/admin");
        }
    }

    private async Task HandleLogin()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            var error = await AuthService.LoginAsync(_model.Username, _model.Password);

            if (error is not null)
            {
                _errorMessage = error;
            }
            else
            {
                Navigation.NavigateTo(ReturnUrl ?? "/admin");
            }
        }
        catch
        {
            _errorMessage = "Възникна грешка при свързване със сървъра.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private sealed class LoginFormModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Потребителското име е задължително.")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Паролата е задължителна.")]
        public string Password { get; set; } = string.Empty;
    }
}
