@page "/admin/invoices/{Id:int}"
@layout AdminLayout
@attribute [Authorize]
@inject IInvoiceService InvoiceService

<PageTitle>@(_invoice is not null ? $"Доставка №{_invoice.InvoiceNumber}" : "Доставка") — Natural Stone Impex</PageTitle>

<!-- Back link -->
<a href="/admin/invoices" class="od-back-link mb-3">
    <i class="bi bi-arrow-left"></i> Обратно към доставките
</a>

@if (_isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" style="color: var(--nsi-accent);" role="status">
            <span class="visually-hidden">Зареждане...</span>
        </div>
    </div>
}
else if (_invoice is null)
{
    <div class="admin-empty-state">
        <i class="bi bi-question-circle admin-empty-icon"></i>
        <p class="admin-empty-text">Доставката не е намерена.</p>
        <a href="/admin/invoices" class="btn btn-nsi-outline mt-2">Обратно към доставките</a>
    </div>
}
else
{
    @* Invoice Header *@
    <div class="od-header">
        <h2 class="od-order-number">Доставка №@_invoice.InvoiceNumber</h2>
        <span class="od-order-date">
            <i class="bi bi-calendar3 me-1"></i>@_invoice.EntryDate.ToString("dd.MM.yyyy")
        </span>
    </div>

    @* Card 1 — Invoice Info *@
    <div class="od-card mb-4">
        <div class="od-card-header">
            <i class="bi bi-receipt"></i> Данни за доставката
        </div>
        <div class="od-card-body">
            <div class="od-info-row">
                <span class="od-info-label">Доставчик</span>
                <span class="od-info-value">@_invoice.SupplierName</span>
            </div>
            <div class="od-info-row">
                <span class="od-info-label">Номер на фактура</span>
                <span class="od-info-value order-number-mono">@_invoice.InvoiceNumber</span>
            </div>
            <div class="od-info-row">
                <span class="od-info-label">Дата на фактура</span>
                <span class="od-info-value">@_invoice.InvoiceDate.ToString("dd.MM.yyyy")</span>
            </div>
            <div class="od-info-row">
                <span class="od-info-label">Дата на въвеждане</span>
                <span class="od-info-value">@_invoice.EntryDate.ToString("dd.MM.yyyy")</span>
            </div>
        </div>
    </div>

    @* Card 2 — Items Table *@
    <div class="od-card mb-4">
        <div class="od-card-header">
            <i class="bi bi-box-seam"></i> Артикули
        </div>
        <div class="table-container" style="border-radius: 0; box-shadow: none;">
            <div style="overflow-x: auto;">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width: 50px;">№</th>
                            <th>Продукт</th>
                            <th>Мерна ед.</th>
                            <th class="text-end">Количество</th>
                            <th class="text-end">Покупна цена</th>
                            <th class="text-end">Общо</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < _invoice.Items.Count; i++)
                        {
                            var item = _invoice.Items[i];
                            <tr>
                                <td style="color: var(--nsi-gray);">@(i + 1)</td>
                                <td>
                                    <span class="fw-semibold" style="color: var(--nsi-dark);">@item.ProductName</span>
                                </td>
                                <td style="color: var(--nsi-gray-dark);">@item.UnitDisplay</td>
                                <td class="text-end">@item.Quantity.ToString("F2")</td>
                                <td class="text-end" style="color: var(--nsi-gray-dark);">@item.PurchasePrice.ToString("F2") &euro;</td>
                                <td class="text-end">
                                    <span class="fw-semibold" style="color: var(--nsi-accent-dark);">@item.RowTotal.ToString("F2") &euro;</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* Card 3 — Totals *@
    <div class="d-flex justify-content-end mb-4">
        <div class="od-card od-totals-card" style="min-width: 280px; max-width: 380px; width: 100%;">
            <div class="od-card-header">
                <i class="bi bi-calculator"></i> Обобщение
            </div>
            <div class="od-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="od-grand-total">Обща стойност:</span>
                    <span class="od-grand-total">@_invoice.InvoiceTotal.ToString("F2") &euro;</span>
                </div>
            </div>
        </div>
    </div>

    @* Info note *@
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>Доставките не могат да бъдат редактирани. При грешка, коригирайте наличностите ръчно от страницата за продукти.
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private InvoiceDetailDto? _invoice;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        try
        {
            _invoice = await InvoiceService.GetByIdAsync(Id);
        }
        catch
        {
            _invoice = null;
        }
        finally
        {
            _isLoading = false;
        }
    }
}
