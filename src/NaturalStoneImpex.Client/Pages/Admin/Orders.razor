@page "/admin/orders"
@layout AdminLayout
@attribute [Authorize]
@inject IOrderService OrderService
@inject NavigationManager Navigation

<PageTitle>Поръчки — Natural Stone Impex</PageTitle>

<h1 class="mb-3">Поръчки</h1>

@if (_errorMessage is not null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @_errorMessage
        <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
    </div>
}

<!-- Status summary bar -->
<div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fw-bold">Чакащи</div>
                <span class="badge bg-warning text-dark fs-5">@_stats.PendingOrders</span>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fw-bold">Потвърдени</div>
                <span class="badge bg-info text-white fs-5">@_stats.ConfirmedOrders</span>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fw-bold">Завършени</div>
                <span class="badge bg-success text-white fs-5">@_stats.CompletedOrders</span>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="fw-bold">Общо</div>
                <span class="badge bg-secondary fs-5">@(_stats.PendingOrders + _stats.ConfirmedOrders + _stats.CompletedOrders)</span>
            </div>
        </div>
    </div>
</div>

<!-- Status filter tabs -->
<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <button class="nav-link @(_activeFilter == null ? "active" : "")" @onclick="() => OnFilterChanged(null)">Всички</button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeFilter == 0 ? "active" : "")" @onclick="() => OnFilterChanged(0)">Чакащи</button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeFilter == 1 ? "active" : "")" @onclick="() => OnFilterChanged(1)">Потвърдени</button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeFilter == 2 ? "active" : "")" @onclick="() => OnFilterChanged(2)">Завършени</button>
    </li>
</ul>

@if (_isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Зареждане...</span>
        </div>
    </div>
}
else if (_orders.Items.Count == 0)
{
    <div class="alert alert-info">Няма поръчки с този статус.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>№</th>
                    <th>Номер</th>
                    <th>Дата</th>
                    <th>Клиент</th>
                    <th>Тип</th>
                    <th>Метод</th>
                    <th>Статус</th>
                    <th>Обща сума</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @{ var rowNum = (_currentPage - 1) * PageSize; }
                @foreach (var order in _orders.Items)
                {
                    rowNum++;
                    <tr>
                        <td>@rowNum</td>
                        <td><strong>@order.OrderNumber</strong></td>
                        <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>@order.CustomerName</td>
                        <td><span class="badge bg-light text-dark">@order.CustomerTypeDisplay</span></td>
                        <td>@order.DeliveryMethodDisplay</td>
                        <td>
                            @if (order.IsCancelled)
                            {
                                <span class="badge bg-danger text-white">Отказана</span>
                            }
                            else
                            {
                                <span class="badge @GetStatusBadgeClass(order.Status)">@order.StatusDisplay</span>
                            }
                        </td>
                        <td>@order.TotalWithVat.ToString("F2") &euro;</td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm"
                                    @onclick="() => NavigateToOrder(order.Id)">
                                Виж
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <Pagination CurrentPage="_orders.Page" TotalPages="_orders.TotalPages" OnPageChanged="OnPageChanged" />
}

@code {
    private PaginatedResponse<OrderListDto> _orders = new();
    private OrderStatsDto _stats = new();
    private bool _isLoading = true;
    private string? _errorMessage;
    private int? _activeFilter;
    private int _currentPage = 1;
    private const int PageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;

        try
        {
            var statsTask = OrderService.GetStatsAsync();
            var ordersTask = OrderService.GetAllAsync(_activeFilter, _currentPage, PageSize);
            await Task.WhenAll(statsTask, ordersTask);

            _stats = statsTask.Result;
            _orders = ordersTask.Result;
        }
        catch
        {
            _errorMessage = "Възникна грешка при зареждане на поръчките.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnFilterChanged(int? status)
    {
        _activeFilter = status;
        _currentPage = 1;
        await LoadDataAsync();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadDataAsync();
    }

    private void NavigateToOrder(int orderId)
    {
        Navigation.NavigateTo($"/admin/orders/{orderId}");
    }

    private static string GetStatusBadgeClass(int status) => status switch
    {
        0 => "bg-warning text-dark",   // Чакаща
        1 => "bg-info text-white",     // Потвърдена
        2 => "bg-success text-white",  // Завършена
        _ => "bg-secondary"
    };
}
