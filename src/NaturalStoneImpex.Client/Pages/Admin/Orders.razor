@page "/admin/orders"
@layout AdminLayout
@attribute [Authorize]
@inject IOrderService OrderService
@inject NavigationManager Navigation

<PageTitle>Поръчки — Natural Stone Impex</PageTitle>

<!-- Page header -->
<h1 class="page-heading mb-4">Поръчки</h1>

@if (_errorMessage is not null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@_errorMessage
        <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
    </div>
}

<!-- Status summary cards -->
<div class="row g-3 mb-4">
    <div class="col-6 col-lg-3">
        <div class="order-stat-mini order-stat-mini--warning">
            <div class="order-stat-mini__value">@_stats.PendingOrders</div>
            <div class="order-stat-mini__label">Чакащи</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="order-stat-mini order-stat-mini--info">
            <div class="order-stat-mini__value">@_stats.ConfirmedOrders</div>
            <div class="order-stat-mini__label">Потвърдени</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="order-stat-mini order-stat-mini--success">
            <div class="order-stat-mini__value">@_stats.CompletedOrders</div>
            <div class="order-stat-mini__label">Завършени</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="order-stat-mini order-stat-mini--muted">
            <div class="order-stat-mini__value">@(_stats.PendingOrders + _stats.ConfirmedOrders + _stats.CompletedOrders)</div>
            <div class="order-stat-mini__label">Общо</div>
        </div>
    </div>
</div>

<!-- Status filter pills -->
<div class="order-filter-pills mb-4">
    <button class="order-filter-pill @(_activeFilter == null ? "order-filter-pill--active" : "")"
            @onclick="() => OnFilterChanged(null)">
        <i class="bi bi-list-ul"></i> Всички
    </button>
    <button class="order-filter-pill @(_activeFilter == 0 ? "order-filter-pill--active" : "")"
            @onclick="() => OnFilterChanged(0)">
        <i class="bi bi-clock"></i> Чакащи
    </button>
    <button class="order-filter-pill @(_activeFilter == 1 ? "order-filter-pill--active" : "")"
            @onclick="() => OnFilterChanged(1)">
        <i class="bi bi-check-circle"></i> Потвърдени
    </button>
    <button class="order-filter-pill @(_activeFilter == 2 ? "order-filter-pill--active" : "")"
            @onclick="() => OnFilterChanged(2)">
        <i class="bi bi-check-all"></i> Завършени
    </button>
</div>

@if (_isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" style="color: var(--nsi-accent);" role="status">
            <span class="visually-hidden">Зареждане...</span>
        </div>
    </div>
}
else if (_orders.Items.Count == 0)
{
    <div class="admin-empty-state">
        <i class="bi bi-inbox admin-empty-icon"></i>
        <p class="admin-empty-text mb-0">Няма поръчки с този статус.</p>
    </div>
}
else
{
    <div class="table-container" style="overflow-x: auto;">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 50px;">№</th>
                    <th>Номер</th>
                    <th>Дата</th>
                    <th>Клиент</th>
                    <th>Тип</th>
                    <th>Метод</th>
                    <th>Статус</th>
                    <th class="text-end">Обща сума</th>
                    <th class="text-center" style="width: 80px;">Виж</th>
                </tr>
            </thead>
            <tbody>
                @{ var rowNum = (_currentPage - 1) * PageSize; }
                @foreach (var order in _orders.Items)
                {
                    rowNum++;
                    <tr class="table-row-clickable" @onclick="() => NavigateToOrder(order.Id)">
                        <td style="color: var(--nsi-gray);">@rowNum</td>
                        <td>
                            <span class="order-number-mono">@order.OrderNumber</span>
                        </td>
                        <td style="color: var(--nsi-gray-dark);">@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            <span class="fw-semibold" style="color: var(--nsi-dark);">@order.CustomerName</span>
                        </td>
                        <td>
                            <span class="badge" style="background: var(--nsi-light); color: var(--nsi-gray-dark); font-weight: 500;">@order.CustomerTypeDisplay</span>
                        </td>
                        <td style="color: var(--nsi-gray-dark); font-size: 0.875rem;">@order.DeliveryMethodDisplay</td>
                        <td>
                            @if (order.IsCancelled)
                            {
                                <span class="badge badge-status-cancelled">Отказана</span>
                            }
                            else
                            {
                                <span class="badge @GetStatusBadgeClass(order.Status)">@order.StatusDisplay</span>
                            }
                        </td>
                        <td class="text-end">
                            <span class="fw-semibold" style="color: var(--nsi-accent-dark);">@order.TotalWithVat.ToString("F2") &euro;</span>
                        </td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-nsi-table-action"
                                    @onclick="() => NavigateToOrder(order.Id)"
                                    @onclick:stopPropagation="true"
                                    title="Преглед">
                                <i class="bi bi-eye"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <Pagination CurrentPage="_orders.Page" TotalPages="_orders.TotalPages" OnPageChanged="OnPageChanged" />
    </div>
}

@code {
    private PaginatedResponse<OrderListDto> _orders = new();
    private OrderStatsDto _stats = new();
    private bool _isLoading = true;
    private string? _errorMessage;
    private int? _activeFilter;
    private int _currentPage = 1;
    private const int PageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;

        try
        {
            var statsTask = OrderService.GetStatsAsync();
            var ordersTask = OrderService.GetAllAsync(_activeFilter, _currentPage, PageSize);
            await Task.WhenAll(statsTask, ordersTask);

            _stats = statsTask.Result;
            _orders = ordersTask.Result;
        }
        catch
        {
            _errorMessage = "Възникна грешка при зареждане на поръчките.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnFilterChanged(int? status)
    {
        _activeFilter = status;
        _currentPage = 1;
        await LoadDataAsync();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadDataAsync();
    }

    private void NavigateToOrder(int orderId)
    {
        Navigation.NavigateTo($"/admin/orders/{orderId}");
    }

    private static string GetStatusBadgeClass(int status) => status switch
    {
        0 => "bg-warning text-dark",   // Чакаща
        1 => "bg-info text-white",     // Потвърдена
        2 => "bg-success text-white",  // Завършена
        _ => "bg-secondary"
    };
}
