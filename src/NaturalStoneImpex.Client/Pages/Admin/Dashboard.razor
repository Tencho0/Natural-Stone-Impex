@page "/admin"
@layout AdminLayout
@attribute [Authorize]
@using NaturalStoneImpex.Client.Models
@using NaturalStoneImpex.Client.Services
@inject IOrderService OrderService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Табло — Natural Stone Impex</PageTitle>

<h1 class="mb-4">Табло</h1>

@* Row 1 — Stat Cards *@
<div class="row mb-4">
    @if (_statsLoading)
    {
        <div class="col-12 text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Зареждане...</span>
            </div>
        </div>
    }
    else if (_statsError is not null)
    {
        <div class="col-12">
            <div class="alert alert-danger">@_statsError</div>
        </div>
    }
    else if (_stats is not null)
    {
        <div class="col-md-3 mb-3">
            <div class="card border-start border-primary border-4 h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Общо продукти</div>
                    <h3 class="mb-0 text-primary">@_stats.TotalProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-start border-warning border-4 h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Чакащи поръчки</div>
                    <h3 class="mb-0 @(_stats.PendingOrders > 0 ? "text-warning fw-bold" : "")">@_stats.PendingOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-start border-info border-4 h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Потвърдени поръчки</div>
                    <h3 class="mb-0 text-info">@_stats.ConfirmedOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-start border-success border-4 h-100">
                <div class="card-body">
                    <div class="text-muted small mb-1">Завършени поръчки</div>
                    <h3 class="mb-0 text-success">@_stats.CompletedOrders</h3>
                </div>
            </div>
        </div>
    }
</div>

@* Row 2 — Recent Orders + Low Stock *@
<div class="row">
    @* Left column — Recent Orders *@
    <div class="col-md-7 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">Последни поръчки</h5>

                @if (_recentLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Зареждане...</span>
                        </div>
                    </div>
                }
                else if (_recentError is not null)
                {
                    <div class="alert alert-danger">@_recentError</div>
                }
                else if (_recentOrders is null || _recentOrders.Count == 0)
                {
                    <p class="text-muted">Няма поръчки.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Номер</th>
                                    <th>Дата</th>
                                    <th>Клиент</th>
                                    <th>Статус</th>
                                    <th class="text-end">Сума</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in _recentOrders)
                                {
                                    <tr style="cursor: pointer;" @onclick="() => NavigateToOrder(order.Id)">
                                        <td>@order.OrderNumber</td>
                                        <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>@order.CustomerName</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(order)">@order.StatusDisplay</span>
                                        </td>
                                        <td class="text-end">@order.TotalWithVat.ToString("F2") &euro;</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a href="/admin/orders" class="text-decoration-none">Виж всички поръчки &rarr;</a>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Right column — Low Stock *@
    <div class="col-md-5 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">Ниска наличност</h5>

                @if (_lowStockLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Зареждане...</span>
                        </div>
                    </div>
                }
                else if (_lowStockError is not null)
                {
                    <div class="alert alert-danger">@_lowStockError</div>
                }
                else if (_lowStockProducts is null || _lowStockProducts.Count == 0)
                {
                    <div class="alert alert-success mb-0">
                        &#10003; Всички продукти са с достатъчна наличност.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning py-2 mb-3">
                        <strong>&#9888; Внимание:</strong> @_lowStockProducts.Count продукт(а) с ниска наличност
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Продукт</th>
                                    <th>Категория</th>
                                    <th class="text-end">Наличност</th>
                                    <th>Мерна ед.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in _lowStockProducts)
                                {
                                    <tr>
                                        <td>
                                            <a href="/admin/products/@product.Id/edit" class="text-decoration-none">@product.Name</a>
                                        </td>
                                        <td>@product.CategoryName</td>
                                        <td class="text-end text-danger fw-bold">@product.StockQuantity.ToString("F2")</td>
                                        <td>@product.UnitDisplay</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private OrderStatsDto? _stats;
    private List<OrderListDto>? _recentOrders;
    private List<ProductListDto>? _lowStockProducts;

    private bool _statsLoading = true;
    private bool _recentLoading = true;
    private bool _lowStockLoading = true;

    private string? _statsError;
    private string? _recentError;
    private string? _lowStockError;

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(
            LoadStatsAsync(),
            LoadRecentOrdersAsync(),
            LoadLowStockAsync()
        );
    }

    private async Task LoadStatsAsync()
    {
        try
        {
            _stats = await OrderService.GetStatsAsync();
        }
        catch
        {
            _statsError = "Грешка при зареждане на статистиките.";
        }
        finally
        {
            _statsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadRecentOrdersAsync()
    {
        try
        {
            _recentOrders = await OrderService.GetRecentAsync(5);
        }
        catch
        {
            _recentError = "Грешка при зареждане на последните поръчки.";
        }
        finally
        {
            _recentLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadLowStockAsync()
    {
        try
        {
            _lowStockProducts = await ProductService.GetLowStockAsync(10);
        }
        catch
        {
            _lowStockError = "Грешка при зареждане на наличностите.";
        }
        finally
        {
            _lowStockLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToOrder(int orderId)
    {
        Navigation.NavigateTo($"/admin/orders/{orderId}");
    }

    private static string GetStatusBadgeClass(OrderListDto order)
    {
        if (order.IsCancelled)
            return "bg-danger text-white";

        return order.Status switch
        {
            0 => "bg-warning text-dark",
            1 => "bg-info text-white",
            2 => "bg-success text-white",
            _ => "bg-secondary text-white"
        };
    }
}
