@page "/admin"
@layout AdminLayout
@attribute [Authorize]
@using NaturalStoneImpex.Client.Models
@using NaturalStoneImpex.Client.Services
@inject IOrderService OrderService
@inject IProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Табло — Natural Stone Impex</PageTitle>

<h1 class="dash-page-title mb-4">Табло</h1>

@* Row 1 — Stat Cards *@
<div class="row g-3 mb-4">
    @if (_statsLoading)
    {
        <div class="col-12 text-center py-4">
            <div class="spinner-border" role="status" style="color: var(--nsi-primary);">
                <span class="visually-hidden">Зареждане...</span>
            </div>
        </div>
    }
    else if (_statsError is not null)
    {
        <div class="col-12">
            <div class="alert alert-danger">@_statsError</div>
        </div>
    }
    else if (_stats is not null)
    {
        <div class="col-6 col-lg-3">
            <div class="dash-stat-card dash-stat-primary">
                <div class="dash-stat-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div class="dash-stat-value" style="color: var(--nsi-primary);">@_stats.TotalProducts</div>
                <div class="dash-stat-label">Общо продукти</div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="dash-stat-card dash-stat-warning">
                <div class="dash-stat-icon">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="dash-stat-value @(_stats.PendingOrders > 0 ? "fw-bold" : "")" style="color: var(--nsi-warning);">@_stats.PendingOrders</div>
                <div class="dash-stat-label">Чакащи поръчки</div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="dash-stat-card dash-stat-accent">
                <div class="dash-stat-icon">
                    <i class="bi bi-check2-circle"></i>
                </div>
                <div class="dash-stat-value" style="color: var(--nsi-accent);">@_stats.ConfirmedOrders</div>
                <div class="dash-stat-label">Потвърдени поръчки</div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="dash-stat-card dash-stat-success">
                <div class="dash-stat-icon">
                    <i class="bi bi-check2-all"></i>
                </div>
                <div class="dash-stat-value" style="color: var(--nsi-success);">@_stats.CompletedOrders</div>
                <div class="dash-stat-label">Завършени поръчки</div>
            </div>
        </div>
    }
</div>

@* Row 2 — Recent Orders + Low Stock *@
<div class="row">
    @* Left column — Recent Orders *@
    <div class="col-lg-7 mb-4">
        <div class="dash-card h-100">
            <div class="dash-card-header">
                <h5 class="dash-card-title">
                    <i class="bi bi-clock-history me-2"></i>Последни поръчки
                </h5>
            </div>
            <div class="dash-card-body">
                @if (_recentLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status" style="color: var(--nsi-primary);">
                            <span class="visually-hidden">Зареждане...</span>
                        </div>
                    </div>
                }
                else if (_recentError is not null)
                {
                    <div class="alert alert-danger">@_recentError</div>
                }
                else if (_recentOrders is null || _recentOrders.Count == 0)
                {
                    <p class="text-muted mb-0">Няма поръчки.</p>
                }
                else
                {
                    <div class="table-container">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Номер</th>
                                    <th>Дата</th>
                                    <th>Клиент</th>
                                    <th>Статус</th>
                                    <th class="text-end">Сума</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in _recentOrders)
                                {
                                    <tr style="cursor: pointer;" @onclick="() => NavigateToOrder(order.Id)">
                                        <td>@order.OrderNumber</td>
                                        <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>@order.CustomerName</td>
                                        <td>
                                            <span class="badge rounded-pill @GetStatusBadgeClass(order)">@order.StatusDisplay</span>
                                        </td>
                                        <td class="text-end">@order.TotalWithVat.ToString("F2") &euro;</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a href="/admin/orders" class="dash-link">
                            Виж всички поръчки <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Right column — Low Stock *@
    <div class="col-lg-5 mb-4">
        <div class="dash-card dash-card-warning h-100">
            <div class="dash-card-header">
                <h5 class="dash-card-title">
                    <i class="bi bi-exclamation-triangle me-2" style="color: var(--nsi-warning);"></i>Ниска наличност
                </h5>
            </div>
            <div class="dash-card-body">
                @if (_lowStockLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status" style="color: var(--nsi-primary);">
                            <span class="visually-hidden">Зареждане...</span>
                        </div>
                    </div>
                }
                else if (_lowStockError is not null)
                {
                    <div class="alert alert-danger">@_lowStockError</div>
                }
                else if (_lowStockProducts is null || _lowStockProducts.Count == 0)
                {
                    <div class="dash-success-note mb-0">
                        <i class="bi bi-check-circle me-2"></i>Всички продукти са с достатъчна наличност.
                    </div>
                }
                else
                {
                    <div class="dash-warning-note mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Внимание:</strong> @_lowStockProducts.Count продукт(а) с ниска наличност
                    </div>
                    <div class="table-container">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Продукт</th>
                                    <th>Категория</th>
                                    <th class="text-end">Наличност</th>
                                    <th>Мерна ед.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in _lowStockProducts)
                                {
                                    <tr>
                                        <td>
                                            <a href="/admin/products/@product.Id/edit" class="dash-link">@product.Name</a>
                                        </td>
                                        <td>@product.CategoryName</td>
                                        <td class="text-end fw-bold" style="color: var(--nsi-danger);">@product.StockQuantity.ToString("F2")</td>
                                        <td>@product.UnitDisplay</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private OrderStatsDto? _stats;
    private List<OrderListDto>? _recentOrders;
    private List<ProductListDto>? _lowStockProducts;

    private bool _statsLoading = true;
    private bool _recentLoading = true;
    private bool _lowStockLoading = true;

    private string? _statsError;
    private string? _recentError;
    private string? _lowStockError;

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(
            LoadStatsAsync(),
            LoadRecentOrdersAsync(),
            LoadLowStockAsync()
        );
    }

    private async Task LoadStatsAsync()
    {
        try
        {
            _stats = await OrderService.GetStatsAsync();
        }
        catch
        {
            _statsError = "Грешка при зареждане на статистиките.";
        }
        finally
        {
            _statsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadRecentOrdersAsync()
    {
        try
        {
            _recentOrders = await OrderService.GetRecentAsync(5);
        }
        catch
        {
            _recentError = "Грешка при зареждане на последните поръчки.";
        }
        finally
        {
            _recentLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadLowStockAsync()
    {
        try
        {
            _lowStockProducts = await ProductService.GetLowStockAsync(10);
        }
        catch
        {
            _lowStockError = "Грешка при зареждане на наличностите.";
        }
        finally
        {
            _lowStockLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToOrder(int orderId)
    {
        Navigation.NavigateTo($"/admin/orders/{orderId}");
    }

    private static string GetStatusBadgeClass(OrderListDto order)
    {
        if (order.IsCancelled)
            return "bg-danger text-white";

        return order.Status switch
        {
            0 => "bg-warning text-dark",
            1 => "bg-info text-white",
            2 => "bg-success text-white",
            _ => "bg-secondary text-white"
        };
    }
}
