@page "/admin/products"
@layout AdminLayout
@attribute [Authorize]
@implements IDisposable
@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Продукти — Natural Stone Impex</PageTitle>

<!-- Page header -->
<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
    <h1 class="page-heading mb-0">Продукти</h1>
    <button class="btn btn-nsi-accent" @onclick='() => Navigation.NavigateTo("/admin/products/new")'>
        <i class="bi bi-plus-lg me-1"></i> Нов продукт
    </button>
</div>

@if (_successMessage is not null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@_successMessage
        <button type="button" class="btn-close" @onclick="() => _successMessage = null"></button>
    </div>
}

@if (_errorMessage is not null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@_errorMessage
        <button type="button" class="btn-close" @onclick="() => _errorMessage = null"></button>
    </div>
}

<!-- Search & Filter bar -->
<div class="d-flex flex-column flex-md-row gap-3 mb-4">
    <div class="position-relative flex-grow-1" style="max-width: 400px;">
        <i class="bi bi-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: var(--nsi-gray); pointer-events: none;"></i>
        <input type="text" class="form-control" placeholder="Търсене по име..."
               value="@_searchText" @oninput="OnSearchInput"
               style="padding-left: 2.75rem; border-radius: var(--nsi-radius-pill);" />
    </div>
    <div style="min-width: 220px;">
        <select class="form-select" value="@_selectedCategoryId" @onchange="OnCategoryChanged"
                style="border-radius: var(--nsi-radius-pill);">
            <option value="">Всички категории</option>
            @foreach (var category in _categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
</div>

@if (_isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" style="color: var(--nsi-accent);" role="status">
            <span class="visually-hidden">Зареждане...</span>
        </div>
    </div>
}
else if (_products.Items.Count == 0)
{
    <div class="text-center py-5" style="color: var(--nsi-gray);">
        <i class="bi bi-inbox" style="font-size: 2.5rem; opacity: 0.5;"></i>
        <p class="mt-2 mb-0">Няма намерени продукти.</p>
    </div>
}
else
{
    <div class="table-container" style="overflow-x: auto;">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 60px;">Снимка</th>
                    <th>Име</th>
                    <th>Категория</th>
                    <th>Цена с ДДС</th>
                    <th>Мерна ед.</th>
                    <th>Наличност</th>
                    <th class="text-center" style="width: 120px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in _products.Items)
                {
                    <tr style="@(!product.IsActive ? "opacity: 0.6;" : "")">
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="https://localhost:5001/@product.ImagePath" alt="@product.Name"
                                     style="width: 40px; height: 40px; object-fit: cover; border-radius: 8px;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center"
                                     style="width: 40px; height: 40px; border-radius: 8px; background: var(--nsi-gray-light);">
                                    <i class="bi bi-image" style="color: var(--nsi-gray); font-size: 0.875rem;"></i>
                                </div>
                            }
                        </td>
                        <td>
                            <span class="fw-semibold" style="color: var(--nsi-dark);">@product.Name</span>
                            @if (!product.IsActive)
                            {
                                <span class="badge badge-nsi-danger ms-2" style="font-size: 0.7rem;">Неактивен</span>
                            }
                        </td>
                        <td style="color: var(--nsi-gray-dark);">@product.CategoryName</td>
                        <td>
                            <span class="fw-semibold" style="color: var(--nsi-accent-dark);">@product.PriceWithVat.ToString("F2") &euro;</span>
                        </td>
                        <td style="color: var(--nsi-gray-dark);">@product.UnitDisplay</td>
                        <td>
                            <span class="@GetStockCssClass(product.StockQuantity)">
                                @product.StockQuantity.ToString("F2")
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="d-inline-flex gap-1">
                                <button class="btn btn-sm btn-nsi-table-action"
                                        @onclick="() => NavigateToEdit(product.Id)"
                                        title="Редактиране">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-nsi-table-action btn-nsi-table-action-danger"
                                        @onclick="() => OpenDeleteModal(product)"
                                        title="Деактивиране">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <Pagination CurrentPage="_products.Page" TotalPages="_products.TotalPages" OnPageChanged="OnPageChanged" />
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: none; border-radius: var(--nsi-radius-md); overflow: hidden;">
            <div class="modal-header" style="background: var(--nsi-light); border-bottom: 1px solid var(--nsi-gray-light);">
                <h5 class="modal-title" id="deleteModalLabel" style="font-family: var(--nsi-font-display); font-weight: 700; color: var(--nsi-dark);">
                    <i class="bi bi-exclamation-triangle me-2" style="color: var(--nsi-danger);"></i>Потвърждение за деактивиране
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
            </div>
            <div class="modal-body" style="padding: 1.5rem;">
                @if (_deleteError is not null)
                {
                    <div class="alert alert-danger">@_deleteError</div>
                }
                <p class="mb-0">Сигурни ли сте, че искате да деактивирате продукт „<strong>@_deletingProduct?.Name</strong>"?</p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid var(--nsi-gray-light); padding: 1rem 1.5rem;">
                <button type="button" class="btn btn-nsi-outline" data-bs-dismiss="modal" disabled="@_isDeleting">Отказ</button>
                <button type="button" class="btn" @onclick="HandleDelete" disabled="@_isDeleting"
                        style="background-color: var(--nsi-danger); color: white; border-radius: var(--nsi-radius-sm); font-weight: 600;">
                    @if (_isDeleting)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    }
                    <i class="bi bi-trash me-1"></i>Деактивирай
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private PaginatedResponse<ProductListDto> _products = new();
    private List<CategoryDto> _categories = new();
    private bool _isLoading = true;
    private bool _isDeleting;
    private string? _successMessage;
    private string? _errorMessage;
    private string? _deleteError;
    private ProductListDto? _deletingProduct;

    private int? _selectedCategoryId;
    private string _searchText = string.Empty;
    private int _currentPage = 1;
    private const int PageSize = 20;

    private System.Timers.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        _debounceTimer = new System.Timers.Timer(300);
        _debounceTimer.AutoReset = false;
        _debounceTimer.Elapsed += async (_, _) =>
        {
            _currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadProductsAsync();
                StateHasChanged();
            });
        };

        try
        {
            _categories = await CategoryService.GetAllAsync();
        }
        catch
        {
            _errorMessage = "Възникна грешка при зареждане на категориите.";
        }

        await LoadProductsAsync();
    }

    private async Task LoadProductsAsync()
    {
        _isLoading = true;

        try
        {
            _products = await ProductService.GetAllAsync(_selectedCategoryId, _searchText, _currentPage, PageSize);
        }
        catch
        {
            _errorMessage = "Възникна грешка при зареждане на продуктите.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnCategoryChanged(ChangeEventArgs e)
    {
        _selectedCategoryId = int.TryParse(e.Value?.ToString(), out var id) ? id : null;
        _currentPage = 1;
        await LoadProductsAsync();
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        _searchText = e.Value?.ToString() ?? string.Empty;
        _debounceTimer?.Stop();
        _debounceTimer?.Start();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadProductsAsync();
    }

    private void NavigateToEdit(int productId)
    {
        Navigation.NavigateTo($"/admin/products/{productId}/edit");
    }

    private async Task OpenDeleteModal(ProductListDto product)
    {
        _deletingProduct = product;
        _deleteError = null;
        await ShowModalAsync("deleteModal");
    }

    private async Task HandleDelete()
    {
        if (_deletingProduct is null) return;

        _isDeleting = true;
        _deleteError = null;

        try
        {
            var error = await ProductService.DeleteAsync(_deletingProduct.Id);

            if (error is not null)
            {
                _deleteError = error;
            }
            else
            {
                await HideModalAsync("deleteModal");
                _successMessage = "Продуктът е деактивиран успешно.";
                await LoadProductsAsync();
                _ = AutoDismissSuccessAsync();
            }
        }
        catch
        {
            _deleteError = "Възникна грешка при свързване със сървъра.";
        }
        finally
        {
            _isDeleting = false;
        }
    }

    private static string GetStockCssClass(decimal stock)
    {
        if (stock <= 10) return "text-danger fw-bold";
        if (stock <= 50) return "text-warning fw-bold";
        return "text-success fw-bold";
    }

    private async Task AutoDismissSuccessAsync()
    {
        await Task.Delay(3000);
        _successMessage = null;
        StateHasChanged();
    }

    private async Task ShowModalAsync(string modalId)
    {
        await JS.InvokeVoidAsync("showModal", modalId);
    }

    private async Task HideModalAsync(string modalId)
    {
        await JS.InvokeVoidAsync("hideModal", modalId);
    }

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }
}
