@page "/contacts"

<PageTitle>Контакти — Natural Stone Impex</PageTitle>

<div class="container">
    <div class="mb-4">
        <h1 class="divider-accent mb-2">Контакти</h1>
        <p class="text-nsi-muted mb-0">Свържете се с нас</p>
    </div>

    <div class="row g-4">
        @* Left Column — Contact Information *@
        <div class="col-md-6">
            <div class="card h-100 animate-fade-in-up">
                <div class="card-body p-4">
                    <h5 class="font-display mb-4" style="color: var(--nsi-dark);">Информация за контакт</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex align-items-start mb-4">
                            <span class="contact-icon-circle me-3 flex-shrink-0">
                                <i class="bi bi-building"></i>
                            </span>
                            <div>
                                <strong class="d-block mb-1">Фирма</strong>
                                <span>Natural Stone Impex</span>
                            </div>
                        </li>
                        <li class="d-flex align-items-start mb-4">
                            <span class="contact-icon-circle me-3 flex-shrink-0">
                                <i class="bi bi-geo-alt-fill"></i>
                            </span>
                            <div>
                                <strong class="d-block mb-1">Адрес</strong>
                                <span>ул. Примерна 1, София</span>
                            </div>
                        </li>
                        <li class="d-flex align-items-start mb-4">
                            <span class="contact-icon-circle me-3 flex-shrink-0">
                                <i class="bi bi-telephone-fill"></i>
                            </span>
                            <div>
                                <strong class="d-block mb-1">Телефон</strong>
                                <a href="tel:+359888123456" class="text-decoration-none">+359 888 123 456</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-start mb-4">
                            <span class="contact-icon-circle me-3 flex-shrink-0">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <div>
                                <strong class="d-block mb-1">Имейл</strong>
                                <a href="mailto:info@naturalstonimpex.bg" class="text-decoration-none">info@naturalstonimpex.bg</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-start mb-0">
                            <span class="contact-icon-circle me-3 flex-shrink-0">
                                <i class="bi bi-clock-fill"></i>
                            </span>
                            <div>
                                <strong class="d-block mb-1">Работно време</strong>
                                <ul class="list-unstyled mb-0" style="font-size: 0.9375rem; line-height: 1.8;">
                                    <li>Понеделник – Петък: 08:00 – 17:00</li>
                                    <li>Събота: 09:00 – 13:00</li>
                                    <li class="text-nsi-muted">Неделя: Почивен ден</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        @* Right Column — Map *@
        <div class="col-md-6">
            <div class="card h-100 animate-fade-in-up animate-stagger-1">
                <div class="card-body p-4">
                    <h5 class="font-display mb-4" style="color: var(--nsi-dark);">Къде се намираме</h5>
                    <div style="border-radius: var(--nsi-radius-md); overflow: hidden; box-shadow: var(--nsi-shadow-sm);">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2932.5!2d23.3219!3d42.6977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDLCsDQxJzUyLjAiTiAyM8KwMTknMTguOCJF!5e0!3m2!1sen!2sbg!4v1234567890"
                            width="100%" height="350" style="border: 0; display: block;" allowfullscreen=""
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Call to Action *@
    <div class="section-warm text-center mt-5 animate-fade-in-up animate-stagger-2" style="border-radius: var(--nsi-radius-lg); padding: 2.5rem 1.5rem;">
        <i class="bi bi-chat-dots mb-3 d-block" style="font-size: 2rem; color: var(--nsi-accent);"></i>
        <p class="fs-5 font-display mb-3" style="color: var(--nsi-dark);">Имате въпроси? Не се колебайте да се свържете с нас!</p>
        <a href="/catalog" class="btn btn-nsi-primary px-4">
            <i class="bi bi-grid-3x3-gap me-2"></i>Обратно към каталога
        </a>
    </div>
</div>
