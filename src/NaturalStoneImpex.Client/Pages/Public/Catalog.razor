@page "/catalog"
@using NaturalStoneImpex.Client.Models
@using NaturalStoneImpex.Client.Services
@using NaturalStoneImpex.Client.Components
@inject IProductService ProductService
@inject ICategoryService CategoryService
@implements IDisposable

<PageTitle>Каталог — Natural Stone Impex</PageTitle>

@* Page header *@
<div class="catalog-header">
    <h1 class="catalog-title">Каталог</h1>
    <p class="catalog-subtitle">Разгледайте нашите строителни материали</p>
</div>

@* Mobile category chips (visible < lg) *@
<div class="catalog-chips-wrapper d-lg-none mb-3">
    <div class="catalog-chips">
        <button class="catalog-chip @(_selectedCategoryId == null ? "catalog-chip--active" : "")"
                @onclick="() => SelectCategory(null)">
            Всички
        </button>
        @if (_categories != null)
        {
            @foreach (var category in _categories)
            {
                <button class="catalog-chip @(_selectedCategoryId == category.Id ? "catalog-chip--active" : "")"
                        @onclick="() => SelectCategory(category.Id)">
                    @category.Name
                </button>
            }
        }
    </div>
</div>

<div class="row g-4">
    @* Category sidebar (desktop, visible lg+) *@
    <div class="col-lg-3 d-none d-lg-block">
        <nav class="catalog-sidebar">
            <h6 class="catalog-sidebar-heading">Категории</h6>
            <ul class="catalog-sidebar-list">
                <li>
                    <button class="catalog-sidebar-item catalog-sidebar-item--all @(_selectedCategoryId == null ? "catalog-sidebar-item--active" : "")"
                            @onclick="() => SelectCategory(null)">
                        <span>Всички категории</span>
                    </button>
                </li>
                @if (_categories != null)
                {
                    @foreach (var category in _categories)
                    {
                        <li>
                            <button class="catalog-sidebar-item @(_selectedCategoryId == category.Id ? "catalog-sidebar-item--active" : "")"
                                    @onclick="() => SelectCategory(category.Id)">
                                <span>@category.Name</span>
                                <span class="catalog-sidebar-badge">@category.ProductCount</span>
                            </button>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>

    @* Main content *@
    <div class="col-12 col-lg-9">
        @* Search bar *@
        <div class="catalog-search mb-4">
            <div class="catalog-search-wrapper">
                <i class="bi bi-search catalog-search-icon"></i>
                <input type="text"
                       class="form-control catalog-search-input"
                       placeholder="Търсене на продукт..."
                       value="@_searchInput"
                       @oninput="OnSearchInput" />
            </div>
        </div>

        @* Products grid *@
        @if (_isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border catalog-spinner" role="status">
                    <span class="visually-hidden">Зареждане...</span>
                </div>
                <p class="mt-2 text-muted">Зареждане...</p>
            </div>
        }
        else if (_products == null || !_products.Items.Any())
        {
            <div class="catalog-empty">
                <i class="bi bi-search catalog-empty-icon"></i>
                <p class="catalog-empty-text">Няма намерени продукти.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in _products.Items)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                        <ProductCard Product="product" />
                    </div>
                }
            </div>

            <div class="catalog-pagination">
                <Pagination CurrentPage="_products.Page"
                            TotalPages="_products.TotalPages"
                            OnPageChanged="OnPageChanged" />
            </div>
        }
    </div>
</div>

@code {
    private List<CategoryDto>? _categories;
    private PaginatedResponse<ProductListDto>? _products;
    private int? _selectedCategoryId;
    private string _searchInput = string.Empty;
    private string _currentSearch = string.Empty;
    private int _currentPage = 1;
    private bool _isLoading = true;
    private const int PageSize = 12;

    private System.Timers.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        var categoriesTask = CategoryService.GetAllAsync();
        var productsTask = LoadProducts();
        _categories = await categoriesTask;
        await productsTask;
    }

    private async Task LoadProducts()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var search = string.IsNullOrWhiteSpace(_currentSearch) ? null : _currentSearch;
            _products = await ProductService.GetAllAsync(_selectedCategoryId, search, _currentPage, PageSize);
        }
        catch
        {
            _products = null;
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SelectCategory(int? categoryId)
    {
        _selectedCategoryId = categoryId;
        _currentPage = 1;
        await LoadProducts();
    }

    private async Task OnCategoryDropdownChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        _selectedCategoryId = string.IsNullOrEmpty(value) ? null : int.Parse(value);
        _currentPage = 1;
        await LoadProducts();
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        _searchInput = e.Value?.ToString() ?? string.Empty;

        _debounceTimer?.Stop();
        _debounceTimer?.Dispose();

        _debounceTimer = new System.Timers.Timer(300);
        _debounceTimer.AutoReset = false;
        _debounceTimer.Elapsed += async (_, _) =>
        {
            await InvokeAsync(async () =>
            {
                _currentSearch = _searchInput;
                _currentPage = 1;
                await LoadProducts();
            });
        };
        _debounceTimer.Start();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadProducts();
    }

    public void Dispose()
    {
        _debounceTimer?.Stop();
        _debounceTimer?.Dispose();
    }
}
